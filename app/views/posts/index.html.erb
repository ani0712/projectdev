<h1>Posts</h1>



<% @posts.each do |post| %>
<% post.archived? %>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col"> </th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <h2><%= post.title %></h2></td>
      <td> <h3><%= post.content %></h3></td>
      <td> <button type="button" class="btn btn-info">
             <%= link_to 'Show', post %>
           </button></td>
      <% end %>

    </tr>
  </tbody>
</table>
 

<button type="button" class="btn btn-info"><%= link_to 'New Post', new_post_path %></button>


